<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF9ED">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/contraint_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.github.clans.fab.FloatingActionMenu
                    android:id="@+id/floatingMenu"
                    android:layout_width="160dp"
                    android:layout_height="428dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:menu_backgroundColor="@android:color/transparent"
                    fab:menu_animationDelayPerItem="0"
                    fab:menu_colorNormal="#00C29F"
                    fab:menu_colorPressed="#00C29F"
                    fab:menu_colorRipple="#00C29F"
                    fab:menu_fab_label="Cancel"
                    fab:menu_labels_ellipsize="end"
                    fab:menu_labels_singleLine="true">

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onChat"
                        android:src="@drawable/fab_add"
                        fab:fab_label="@string/menuChat"
                        fab:fab_size="mini" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onFoto"
                        android:src="@drawable/fab_add"
                        fab:fab_label="@string/menuFotos"
                        fab:fab_size="mini" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabLibro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onLibro"
                        android:src="@drawable/fab_add"
                        fab:fab_label="@string/menuLibros"
                        fab:fab_size="mini" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabPerfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onPerfillocal"
                        android:src="@drawable/fab_add"
                        fab:fab_label="@string/menuPerfil"
                        fab:fab_size="mini" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabConfig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onConfiguracion"
                        android:src="@drawable/fab_add"
                        fab:fab_label="@string/menuConfig"
                        fab:fab_size="mini" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabSalir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onSalir"
                        android:src="@drawable/fab_add"
                        fab:fab_label="@string/menuSalir"
                        fab:fab_size="mini" />

                </com.github.clans.fab.FloatingActionMenu>

                <ImageView
                    android:id="@+id/id_img_principal_local"
                    android:layout_width="140dp"
                    android:layout_height="159dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/id_nombre_principal_local"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/perfil" />

                <TextView
                    android:id="@+id/id_edad_principal_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="Edad: 30"
                    app:layout_constraintBottom_toTopOf="@+id/simpleTableLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/id_nacionalidad_principal_local" />

                <TextView
                    android:id="@+id/id_nacionalidad_principal_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="Nacionalidad: Colombiano"
                    app:layout_constraintBottom_toTopOf="@+id/id_edad_principal_local"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/id_nombre_principal_local" />

                <TextView
                    android:id="@+id/id_nombre_principal_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="Nombre: Pablo Andres"
                    app:layout_constraintBottom_toTopOf="@+id/id_nacionalidad_principal_local"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/id_img_principal_local" />

                <TableLayout
                    android:id="@+id/simpleTableLayout"
                    android:layout_width="201dp"
                    android:layout_height="145dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="100dp"
                    android:stretchColumns="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/id_edad_principal_local"> <!-- stretch the second column of the layout-->

                    <!-- first row of the table layout-->

                    <TableRow

                        android:id="@+id/firstRow5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/id_libros_principal_local"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_rounded"
                            android:onClick="onClickLibrosLocal"
                            android:text="Libros"
                            android:textColor="@color/cardview_light_background" />
                    </TableRow>

                    <TableRow

                        android:id="@+id/firstRow4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/id_juegos_local"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_rounded"
                            android:onClick="onClickJuegosLocal"
                            android:text="Juegos"
                            android:textColor="@color/cardview_light_background" />
                    </TableRow>

                    <TableRow

                        android:id="@+id/firstRow2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/id_fotos_local"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_rounded"
                            android:onClick="onClickFotosLocal"
                            android:text="Fotos"
                            android:textColor="@color/cardview_light_background" />
                    </TableRow>

                </TableLayout>


            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>